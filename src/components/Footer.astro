      </div>

      <!-- Quick Links -->
      <div class="md:col-span-1">
        <h4 class="text-lg font-semibold text-white mb-4">Navigation</h4>
        <nav class="space-y-3">
          <a href="#accueil" class="footer-link">Accueil</a>
          <a href="#about" class="footer-link">À propos</a>
          <a href="#competences" class="footer-link">Compétences</a>
          <a href="#projets" class="footer-link">Projets</a>
          <a href="#experience" class="footer-link">Expérience</a>
        </nav>
      </div>

      <!-- Contact Info -->
      <!-- <div class="md:col-span-1">
        <h4 class="text-lg font-semibold text-white mb-4">Contact</h4>
        <div class="space-y-3">
          <p class="text-slate-400">
            <span class="text-white font-medium">Email:</span><br />
            <a href="mailto:votre.email@example.com" class="footer-link">
              votre.email@example.com
            </a>
          </p>
          <p class="text-slate-400">
            <span class="text-white font-medium">Téléphone:</span><br />
            <a href="tel:+33123456789" class="footer-link">
              +33 1 23 45 67 89
            </a>
          </p>
          <p class="text-slate-400">
            <span class="text-white font-medium">Localisation:</span><br />
            Paris, France
          </p>
        </div>
      </div> -->
    </div>

    <!-- Bottom Bar -->
    <div class="py-6 border-t border-slate-800">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <div class="flex items-center space-x-2 text-slate-400">
          <span>© 2025 Portfolio. Développé avec</span>
          <Heart class="w-4 h-4 text-red-500 animate-pulse" />
          <span>et</span>
          <a
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="text-orange-400 hover:text-orange-300 transition-colors duration-300"
          >
            Astro
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll to Top Button -->
  <button
    id="scroll-to-top"
    class="fixed bottom-8 right-8 p-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full shadow-lg opacity-0 invisible transition-all duration-300 hover:shadow-xl hover:scale-110 z-50"
    aria-label="Retour en haut"
  >
    <ArrowUp class="w-5 h-5" />
  </button>
</footer>

<style>
  .footer-link {
    @apply block text-slate-400 hover:text-white transition-colors duration-300;
  }

  .footer-social-link {
    @apply p-2 rounded-lg bg-slate-800 text-slate-400 hover:text-white hover:bg-slate-700 transition-all duration-300;
  }

  .scroll-to-top-visible {
    @apply opacity-100 visible;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const scrollToTopBtn = document.getElementById("scroll-to-top");

    // Show/hide scroll to top button
    function toggleScrollToTop() {
      if (window.scrollY > 300) {
        scrollToTopBtn?.classList.add("scroll-to-top-visible");
      } else {
        scrollToTopBtn?.classList.remove("scroll-to-top-visible");
      }
    }

    // Scroll to top functionality
    scrollToTopBtn?.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });

    // Listen for scroll events
    window.addEventListener("scroll", toggleScrollToTop);

    // Initial check
    toggleScrollToTop();
  });
</script>
